<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:padding="0dp" android:orientation="vertical">

    <TextView
            android:text="@string/title_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView" android:textSize="24sp"
            android:gravity="center" android:layout_centerInParent="true" android:visibility="invisible"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/audio_list"
            android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:paddingStart="5dp" android:paddingEnd="5dp"
            android:clickable="false">
    </android.support.v7.widget.RecyclerView>
    <Button
            android:id="@+id/audio_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/media_button"
            android:gravity="bottom|end"
            android:layout_alignParentEnd="true" android:layout_marginEnd="25dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="25dp"/>
</RelativeLayout>